// Custom styles.
//标题区
.headband {
  display: none;
}

.brand {
  background: transparent;
}

.site-meta .site-title {
  font-weight: bolder;
}

.site-meta .site-subtitle {
  font-family: 'Comic Sans MS', "PingFang SC", "Microsoft YaHei", Georgia, sans-serif;
  color: #fff;
}

.header {
  background: url("/uploads/header-bg.jpg");
  background-position-y: -15vh;
}

.header-inner{
  padding: 25px 0 20px;
}

//导航栏

//要在 Muse 下实现导航栏图标与文字在同一行，
//1. 需要将 themes/next/layout/_partials/header/menu.swig 中搜索图标后的换行符删去
//2. 需要将 themes/next/layout/_macro/menu/menu-item.swig 中其他图标后的换行符删去

.menu .menu-item {
  margin: 0 2px;
}

.menu .menu-item a {
  border-bottom-color: transparent !important;
  font-size: 14px;
  color: #0f2e41;
  border-radius: 4px;
  padding: 0px 10px;
  background: none;
  border: none;
  transition-property: background;
  display: block;
  line-height: inherit;
  transition-duration: 0.2s;
  transition-timing-function: ease-in-out;
  transition-delay: 0s;

  &:hover {
  transition-duration: 0.3s;
  background: #e1e1e1;
  border-bottom-color: #222;
  }
}

@media (max-width: 767px){
  .menu .menu-item a {
    padding: 4px 10px;
  }
}


//内容区
.post, .page {
  margin-bottom: 40px;
  padding: 25px 30px 25px;
  -webkit-box-shadow: 0 0 14px rgba(202,203,204,.5);
  -moz-box-shadow: 0 0 14px rgba(202,203,204,.5);
  box-shadow: 0 0 14px rgba(202,203,204,.5);
  background: #fff;
  border-radius: 10px;
}

.posts-collapse .post{
  margin: 30px 0 30px 6px;
}

.posts-expand .post-eof {
  display: block;
  margin: 0px auto 30px;
  width: 0;
}

.posts-expand .post-title {
  font-size: 24px
  border-left: #649ab6 10px solid;
  font-weight: 900;

}

.posts-expand .post-title-link{
  line-height: 1.5;
}

@media (max-width: 767px) {
  .posts-expand {
    margin: 0 20px !important;
  }
  .post {
    padding: 25px 5px 25px;
  }
  .posts-expand .post-title {
    padding-left: 8px;
  }
}


//评论区
.comments{
  padding: 25px 40px 25px;
  -webkit-box-shadow: 0 0 14px rgba(202,203,204,.5);
  -moz-box-shadow: 0 0 14px rgba(202,203,204,.5);
  box-shadow: 0 0 14px rgba(202,203,204,.5);
  background: #fff;
  margin: 0;
  border-radius: 10px;
}

@media (max-width: 767px) {
  .comments {
    padding: 10px 10px 0px !important;
    margin: 0 20px 0 !important;
    }
}

//分类页项目符修正bug
.category-all-page .category-list-item {
